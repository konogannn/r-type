{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/r-type_server${leaderOSExtension}",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "windows": {
                "program": "${workspaceFolder}/r-type_server.exe",
                "miDebuggerPath": "gdb.exe"
            },
            "linux": {
                "program": "${workspaceFolder}/r-type_server",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "preLaunchTask": "Build: Server",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
